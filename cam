<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Air Pen — Рисование в воздухе</title>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/hands/hands.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js"></script>
    <style>
        body { margin: 0; padding: 0; background: #000; overflow: hidden; touch-action: none; }
        /* Растягиваем камеру на весь экран телефона */
        #video_input { position: absolute; width: 100vw; height: 100vh; object-fit: cover; transform: scaleX(-1); opacity: 0.4; }
        /* Слой для рисования поверх камеры */
        #draw_canvas { position: absolute; width: 100vw; height: 100vh; transform: scaleX(-1); }
        .ui { position: absolute; bottom: 30px; left: 50%; transform: translateX(-50%); z-index: 10; }
        button { background: #ff4757; color: white; border: none; padding: 15px 30px; border-radius: 50px; font-weight: bold; font-size: 18px; cursor: pointer; }
    </style>
</head>
<body>

    <video id="video_input" playsinline></video>
    <canvas id="draw_canvas"></canvas>

    <div class="ui">
        <button onclick="window.location.reload()">ОЧИСТИТЬ</button>
    </div>

<script>
    const video = document.getElementById('video_input');
    const canvas = document.getElementById('draw_canvas');
    const ctx = canvas.getContext('2d');

    let lastX = 0, lastY = 0;

    // Подстраиваем размер под экран
    function resize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    }
    window.addEventListener('resize', resize);
    resize();

    // Функция, которая срабатывает, когда ИИ видит руку
    function onResults(results) {
        if (results.multiHandLandmarks && results.multiHandLandmarks.length > 0) {
            const tip = results.multiHandLandmarks[0][8]; // Кончик указательного пальца
            const x = tip.x * canvas.width;
            const y = tip.y * canvas.height;

            // Если это не первая точка — рисуем линию
            if (lastX !== 0) {
                ctx.strokeStyle = '#00ff88'; // Яркий неоновый цвет
                ctx.lineWidth = 8;
                ctx.lineCap = 'round';
                ctx.beginPath();
                ctx.moveTo(lastX, lastY);
                ctx.lineTo(x, y);
                ctx.stroke();
            }
            lastX = x; lastY = y;
        } else {
            lastX = 0; lastY = 0;
        }
    }

    // Запуск ИИ
    const hands = new Hands({locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`});
    hands.setOptions({ maxNumHands: 1, modelComplexity: 1, minDetectionConfidence: 0.5, minTrackingConfidence: 0.5 });
    hands.onResults(onResults);

    // Запуск камеры
    const camera = new Camera(video, {
        onFrame: async () => { await hands.send({image: video}); },
        width: 1280, height: 720
    });
    camera.start();
</script>
</body>
</html>
